<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<appSettings>
		<!-- Path to XAMPP MySQL binaries -->
		<add key="XAMPPPath" value="C:\xampp\mysql\bin" />
	</appSettings>

	<connectionStrings>
		<!-- Adjusted connection string: Pooling disabled, removed Keepalive -->
		<add name="MyConnStr"
			 connectionString="server=localhost;database=cmddb;user=root;pwd=;port=3306;Pooling=false;Connect Timeout=60;Default Command Timeout=60;"
			 providerName="MySql.Data.MySqlClient" />
	</connectionStrings>
</configuration>